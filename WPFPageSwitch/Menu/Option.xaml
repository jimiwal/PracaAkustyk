<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="WPFPageSwitch.Option"
	d:DesignWidth="640" d:DesignHeight="480" Width="800" Height="600">

    <Grid x:Name="LayoutRoot" Background="White">
        <TextBlock Height="40" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="200" Text="Option" TextWrapping="Wrap" FontSize="21.333"/>
        <Button Height="25" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Width="100" Content="&lt; Back" Click="Button_Click"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="484" Margin="30,48,0,0" VerticalAlignment="Top" Width="750">
            <TabItem Header="General">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Sounds">
                <Grid Background="#FFE5E5E5">

                    <ListView x:Name="listView" ItemsSource="{Binding AvailableSounds}" SelectedItem="{Binding SelectedSoundGeneral}" HorizontalAlignment="Left" Height="288" Margin="10,26,0,0" VerticalAlignment="Top" Width="310" RenderTransformOrigin="-0.505,0.44">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="Frequency" Width="100" DisplayMemberBinding="{Binding Frequency}" />
                                <GridViewColumn Header="Volume" Width="100" DisplayMemberBinding="{Binding Volume}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <ListView x:Name="listViewInProcess" ItemsSource="{Binding SoundsInProcess}" HorizontalAlignment="Left" Height="320" Margin="404,26,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="-0.505,0.44">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="90" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="Frequency" Width="90" DisplayMemberBinding="{Binding Frequency}" />
                                <GridViewColumn Header="Volume" Width="90" DisplayMemberBinding="{Binding Volume}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button IsEnabled="{Binding IsUserSelected, Mode=OneWay}" x:Name="button" Content=">>>>" HorizontalAlignment="Left" Margin="325,173,0,0" VerticalAlignment="Top" Width="74" Click="button_Click_1"/>
                    <Button x:Name="button1" Content="X" HorizontalAlignment="Left" Margin="541,351,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
                    <Label x:Name="label" Content="Wszystkie dźwięki" HorizontalAlignment="Left" Margin="72,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.763,0.739"/>
                    <Label x:Name="label_Copy" Content="{Binding SoundInProcessForUser}" HorizontalAlignment="Left" Margin="406,0,0,426" VerticalAlignment="Bottom" RenderTransformOrigin="0.763,0.739" Height="26"/>
                    <Button x:Name="button2" Content="Add" HorizontalAlignment="Left" Margin="110,407,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.653,0.835" Click="button2_Click"/>
                    <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="14,323,0,0" TextWrapping="Wrap" Text="Frequency" VerticalAlignment="Top"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="110,323,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
                    <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="14,351,0,0" TextWrapping="Wrap" Text="Volume (1 - 100)" VerticalAlignment="Top"/>
                    <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="110,351,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
                    <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="14,378,0,0" TextWrapping="Wrap" Text="Name (optional)" VerticalAlignment="Top"/>
                    <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="23" Margin="110,379,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="button1_Copy" Content="Remove" HorizontalAlignment="Left" Margin="245,407,0,0" VerticalAlignment="Top" Width="75" Click="button1_Copy_Click"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>